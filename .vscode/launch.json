    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "docker-debug",
            "name": "Python: Debug in Docker",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true            
        },
    ]
}